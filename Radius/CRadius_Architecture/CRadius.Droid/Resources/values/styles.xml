<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme.Base" parent="@android:style/Theme.Material.Light.DarkActionBar">
    <item name="android:textColor">#333333</item>
    <item name="android:textColorPrimary">#333333</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorControlNormal">#0C92CF</item>
    <item name="android:colorPrimary">#2196F3</item>
    <item name="android:colorPrimaryDark">#333333</item>
    <item name="android:colorAccent">#83CE3A</item>
  </style>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>
  <style name="MyTheme.Splash" parent="MyTheme">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>
</resources>
